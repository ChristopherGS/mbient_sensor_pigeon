        <TableRow android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="30dp">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="left">

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yours"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/mount_db_image"
                    android:paddingBottom="20dp"
                    android:paddingTop="30dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/your_text"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:layout_alignParentRight="true"
                    style="bold"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90mins"
                    android:layout_gravity="center"
                    android:paddingTop="30dp"
                    android:id="@+id/dashboard_time_number_y"
                    android:textSize="16dp" />

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22%"
                    android:layout_gravity="center"
                    android:paddingTop="30dp"
                    android:id="@+id/dashboard_percentage_number_y"
                    android:textSize="16dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2">

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mount"
                    android:paddingBottom="10dp"
                    android:id="@+id/dashboard_position"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center_horizontal"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:src="@drawable/mount_hi_res"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="0dp"
                    android:id="@+id/mount_db_image"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_gravity="center_horizontal"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    android:layout_below="@+id/dashboard_position"
                    android:layout_alignParentStart="false" />


            </RelativeLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="right">

                <TextView android:layout_width="match_parent"
