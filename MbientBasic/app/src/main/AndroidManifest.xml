<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.christophergs.mbientbasic" >

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/metawear_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name="com.mbientlab.metawear.MetaWearBleService" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.mbientlab.metawear.app.fileprovider2"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <activity
            android:name=".ScannerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NavigationActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".StatsActivity"
            android:label="@string/title_activity_stats" >
        </activity>
        <activity
            android:name=".SuggestionActivity"
            android:label="@string/title_activity_suggestion" >
        </activity>
    </application>

</manifest>
